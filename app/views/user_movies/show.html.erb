<div id="links">
  <%= button_to "Return to Discover Page", "/discover", method: :get %>

  <%= button_to "Create a Viewing Party", "/users/#{@user.id}/movies/#{@movie.id}/viewing-party/new", method: :get %>
</div>

<div id="movie-details">
  <div class="movie_title">
    <center>
      <h1><%= @movie.title %></h1>
    <center>
  </div>
  <div class="movie_info">

    <h2>Vote Average:<span> <%= @movie.vote_average%></span></h2>
    <h2>Runtime:<span> <%= (@movie.runtime/60).floor %>h <%= (@movie.runtime%60) %>m</span></h2>
    <h2>Genres:</h2>
  <% @movie.genres.each do |genre| %>
      <h3><%= genre %></h3>
    <% end %>
    <h2>Overview:</h2>
      <div class="movie_overview">
        <p> <%= @movie.overview %></p>
      </div>
      <div class="movie_image">
        <img  src="http://image.tmdb.org/t/p/w500/<%=@movie.poster_path%>" width="400" height="500">
      </div>
  </div>
  <div class="actors">
    <h2>Notable Actors:</h2>
    <% @cast.each do |actor| %>
    <div class="actor_names">
      <h3><%= actor %></h3>
    </div>
    <% end %>
  </div>
</div>