<%= form_with model: @user, local: true do |f| %>
<section id='form'>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :email %>
    <%= f.text_field :email %><br>

    <%= f.label :password %>
    <%= f.text_field :password %><br>

    <%= f.label :password_confirmation%>
    <%= f.text_field :password_confirmation %><br>

    <%= f.submit %>
</section>
<% end %>
