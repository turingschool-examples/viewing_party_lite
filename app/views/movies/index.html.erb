<h1>Discover Movies!!</h1>
<br>

<a class="btn btn-light" href="/movies?q=top rated" role="button">Top Rated Movies</a>
<br/>

<div class="area_container">
  <center>
    <%= form_with url: "/movies", method: :get, local: true do |form| %>
    <%= form.label :search %>
    <%= form.text_field :search %>
    <%= form.submit "Search" %>
    <% end %>
  </center>
</div>
