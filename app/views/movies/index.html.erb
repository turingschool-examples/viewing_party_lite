<div class="container">
  <div class="row">
    <div class="col-12 pt-4 pb-3">
      <div class="text-center">
        <h3>Top Rated Movies</h3>
      </div>
      <div class="text-center pt-4 pb-4 border-bottom">
        <%= link_to 'Discover Page', user_discover_index_path(@user) , class: "btn btn-outline-primary" %>

      </div>
      <div class="text-center">
        <% @movies.each do |movie| %>

          <%= link_to "#{movie.title}", "/users/#{@user.id}/movies/#{movie.id}" %>
          <p>Vote Average: <%= movie.vote_average %> </p><br>
        <% end %>
      </div>
    </div>
  </div>
</div>
