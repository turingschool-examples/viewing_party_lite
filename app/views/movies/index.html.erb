<h1>Viewing Party Lite</h1>
<h3>Top Rated Movies</h3>

<section id = "discover_movies_button">
   <p> <%= button_to 'Discover Movies', "/users/#{@user.id}/discover", method: :get %></p>
</section>

<ol>
<% @movies.each do |movie| %>
  <li><%= link_to "#{movie.title}", "/users/#{@user.id}/movies/#{movie.id}"%>.....<%="Vote Average: #{movie.vote_average}"%></li>
<% end %>
</ol>

