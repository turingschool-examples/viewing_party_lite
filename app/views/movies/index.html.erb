        <tr>
          <th>Title</th>
          <th>Overview</th>
          <th>Poster</th>
        </tr>
      </thead>
      <tbody>
        <% @movies.each do |movie| %>
          <tr>
<<<<<<< HEAD
            <td>
            <%# <#%= form_with model: investigation do |form| %> 
            <%= form_with url: movie_info_path(@user.id, movie.id), method: :post do |form| %>
