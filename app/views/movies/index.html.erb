                <% form.text_field movie.overview %>
                <% form.label movie.id %>
                <% form.text_field movie.id %>
                <% form.label movie.image_url %>
                <% form.text_field movie.image_url %>
                <% form.label movie.average_rating %>
                <% form.text_field movie.average_rating %>
