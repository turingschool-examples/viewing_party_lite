<h1> Viewing Party Light </h1>

<%= button_to "Discover Page", "/users/#{@user.id}/discover", method: :get %>

<h2> <%= @movie.title %> </h2>
<h3> Vote Average:</h3> <%= @movie.vote_average %>
<h3> Runtime:</h3> <%= @movie.format_runtime %> minutes
<h3> Summary:</h3> <%= @movie.summary %>
<h3> Review Count:</h3> <%= @movie.review_count %>
<h3> Genres: </h3>  <% @movie.genres.each do |genre| %>
                      <%= genre %>
                    <% end %>
<br>
<% if @movie.cast %>
  <h3> Cast: </h3> <% @movie.cast.each do |cast| %>
    <p> <%= cast[:name] %> - <%= cast[:character] %> </p>
  <% end %>
<% end %>
<% if @movie.reviews %>
  <h3> Reviews: </h3> <% @movie.reviews.each do |review| %>
    <p> Author: <%= review[:author] %> </p>
    <p> Rating: <%= review[:author_details][:rating] %>
    <p> Content: <%= review[:content] %></p>
  <% end %>
<% end %>
