<%= link_to "Discover", user_movies_discover_path(params[:user_id]) %>

<%= link_to "Create Viewing Party", new_user_movie_party_path(params[:user_id], @data.id) %>

<div id='movie-title'>
    <h1> Movie Title </h1>
    <%= @data.title %>
</div>

<div id='movie-vote'>
    <h1> Average Rating </h1>
    <%= @data.vote_average %>
</div>

<div id='movie-runtime'>
    <h1> Movie Runtime </h1>
    <%= "#{@data.runtime/60} hours, #{@data.runtime % 60} minutes" %>
</div>

<div id='movie-genre'>
    <h1> Average Rating </h1>
    <% @data.genres.each do |genre| %>
        <%= genre[:name] %><br>
    <% end %>
</div>

<div id='movie-genre'>
    <h1> Summary </h1>
    <%= @data.overview %>
</div>

<div id='movie-actors'>
    <h1> Actors </h1>
    <% @data.cast.each do |member| %>
        Actor/Actress: <%= member[:name] %> Character: <%= member[:character] %>
        <br>
    <% end %>
</div>

<div id='movie-reviews'>
    <h1> Total Reviews </h1>
    <%= @data.review_count %>
</div>

<div id='movie-review-content'>
    <h1> Reviews </h1>
    <% @data.review_content.each do |review| %>
        <%= review[:author] %>:
        <br>
        <%= review[:content] %>
        <br>
        <br>
        <br>
    <% end %>
</div>
