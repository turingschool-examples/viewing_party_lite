<h1><%= @movie.title %></h1>

<%= button_to "Create Viewing Party", "/users/#{@user.id}/movies/#{@movie.id}/viewing-party/new" %>
<%= button_to "Discover Page", "/users/#{@user.id}/discover", method: :get, local: true %>

Vote average: <%= @movie.vote_average %>
Runtime: <%= @movie.runtime %>
Genre(s): <%= @movie.genre.join(', ') %><br>
<h4>Summary</h4> <p><%= @movie.overview %></p><br>
<h4>Cast</h4>
  <% @cast.each do |member| %>
    <p class="castMember"><%= "#{member.name} as #{member.character}" %></p>
  <% end %><br>
<h4><%= @reviews.total_results %> Reviews</h4><br>
<% @reviews.paired_reviews.each do |review| %>
<div id="<%=review[:author]%>Review">

  <p><%= review[:author] %></p><br>
  <p><%= review[:content] %></p><br>
</div>
<% end %>
