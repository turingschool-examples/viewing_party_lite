
<h3><%= @details.title %></h3>
<button><%= link_to "Discover Page", "/discover" %></button><br>
Vote Average: <%= @details.vote_average %><br>
Runtime: <%= "#{@details.runtime/60}hr" %> <%= "#{@details.runtime % 60} min" %> <br>
Genre(s):
<%= @details.genre_names.join(", ") %>
<hr>
Summary: <%= @details.summary %>
<hr>
Cast:<br>
<% @cast.first(10).each do |member| %>
  <%= member.name %> as <%= member.character %><br>
<% end %>
<hr>
<%= @reviews.count %> Reviews <br>
<% @reviews.each do |review| %>
  Author: <%= review.author %><br>
  <%= review.content %><br>
  <% end %>
