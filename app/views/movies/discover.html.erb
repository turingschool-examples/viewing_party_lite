<h1>Viewing Party Lite</h1>
<h2>Discover Movies Page</h2>

<div class="center-button">
  <%= button_to "Find Top Rated Movies", movies_path, params: { top_movies: true }, method: :get %>
</div>

<p>OR</p>

<div class="center-field">
  <%= form_with url: movies_path, method: :get, local: true do |form| %>
    <%= form.text_field :query, placeholder: "Search by movie title" %>
    <%= form.submit "Find Movies" %>
  <% end %>
</div>
