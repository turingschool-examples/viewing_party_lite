<h3>Discover Movies</h3>

<p><%= button_to "Find Top Rated Movies", user_movies_path(@user), method: :get %></p>
<p>OR</p>
<p><%= form_with url: user_movies_path(@user), method: :get, local: true, skip_enforcing_utf8: true do |f| %>
  <%= f.text_field :q, placeholder: 'Search by movie name' %>
  <%= f.submit 'Find Movies', name: nil %>
<% end %></p>