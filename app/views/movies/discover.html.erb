<h1>Viewing Party Lite</h1>
<p> Discover Movies </p>

<%= button_to "Find Top Rated Movies", "/users/#{@user.id}/movies?q=top%20rated",params: {q: "top rated"}, method: :get%>

<%= form_with url: "/users/#{@user.id}/movies?q=keyword", method: :get, local: true do |form| %>
  <%= form.label :movie_search, 'Search For Movies By Title' %>
  <%= form.text_field :movie_search %>
  <%= form.label :password, 'Password:' %>
  <%= form.password_field :password %>
  <%= form.label :password, 'Password Confirmation:' %>
  <%= form.label :password, 'Password:' %>
  <%= form.submit 'Search' %>
<% end %>
<% if @movie %>
  <h2>The movie<%= @movie[:original_title] %> </h2>
<% end %>
