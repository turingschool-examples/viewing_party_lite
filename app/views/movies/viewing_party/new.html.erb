<%= form_with url: "/users/#{@user.id}/movies/#{movie.id}", method: :post, local: true do |form| %>
  <%= form.label :duration %>
  <%= form.text_field :duration %>

  <%= form.label :date %>
  <%= form.text_field :date, "data-provide" => 'datepicker' %>

  <%= form.label :start_time %>
  <%= form.number_field :start_time %>

  <%= form.submit "Submit" %>
<% end %>
