<div style="text-align:center">
  <h2>Discover Movies</h2>

  <%= button_to "Find Top Rated Movies", user_movies_path(@user), method: :get %>
  <br>
  <%= form_with url: user_movies_path(@user), method: :get, local: true do |form| %>
    <%= form.label :search, "Search by Movie Title"%>
    <%= form.text_field :search, required: true %>
    <%= form.submit "Find Movies" %>
  <% end %>
</div>
