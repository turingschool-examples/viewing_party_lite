<center>
<h1>Discover Movies</h1>

<%= button_to 'Discover Top Rated Movies', "/users/#{@user.id}/movies", method: :get, params: { top_rated: true } %>

<br>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |f| %>
  <%= f.label :search, 'Search' %>
  <%= f.text_field :search %>
  <%= f.submit 'Search by Movie Title' %>
<% end %>
</center>