<div class="container">
  <div class="row">
    <div class="col-12 pt-4 pb-3">
      <div class="text-center">
        <h3>Discover Movies</h3>
      </div>
      <div class="text-center pt-4 pb-4 border-bottom">
        <%= link_to 'Find Top Rated Movies', user_movies_path(@user) , class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>
<div class="row">
    <div class="col-lg-8 mx-auto">
      <center><div class="bg-white p-4 rounded shadow">
        <%= form_with url: user_movies_path(@user), method: :get, local: true do |f| %>
        <%= f.text_field :search, placeholder: 'Search by movie title' %>
        <%= f.submit "Find Movies" %>
        <% end %>
      </div><center>
    </div>
  </div>
