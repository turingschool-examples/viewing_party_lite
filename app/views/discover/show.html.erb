<p><%= button_to "Discover Top Rated Movies", "/users/#{@user.id}/movies", method: :get, params: {:movies => 'top_movies'}  %></p>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |form| %>
  <%= form.label :search, 'Search for Movies:' %>
  <%= form.text_field :search %>
  <%= form.submit 'Search' %>
  <%= form.hidden_field :user_id, :value => @user.id %>
<% end %>