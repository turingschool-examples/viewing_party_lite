<%= form_with(url: users_path, method: :post, local: true) do |f| %>
  <table>
    <tr>
      <td><%= f.label :name, 'Name' %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :email, 'Email' %></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td><%= f.label :password, 'Password' %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation, 'password confirmation' %></td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td><%= link_to 'I already have an account', login_path %></td>
    </tr>
    <tr>
      <td>
        <%= f.submit 'Register' %>
      </td>
    </tr>
  </table>
<% end %>
