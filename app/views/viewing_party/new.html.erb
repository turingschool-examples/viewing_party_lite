<div class="container">
  <div class="row">
    <div class="col-12 pt-4 pb-3">
      <div class="text-center">
        <h3>Create a party for <%= @movie.title %></h3>
      </div>
      <div class="text-center pt-4 pb-4 border-bottom">
        <%= link_to 'Discover Page', user_discover_index_path(@user) , class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 pt-4 pb-3">
      <div class="text-center">
        <%= form_with url: "/movies/#{params[:movie_id]}/parties", local: true do |f| %>
      <p><%= f.label :duration %>
      <%= f.text_field :length, value: @movie.format_time %></p>

      <p><%= f.label :date %>
      <%= f.date_select :date %></p>

      <p><%= f.label :start_time %>
      <%= f.time_select :start_time, { ampm: true, ignore_date: true} %></p>

      <% @users.each do |user| %>
        <%= check_box_tag "users[]", user.id %>
        <%= user.name %>  (<%= user.email %>)
      <% end %><br><br>
      <div class= "btn btn-outline-primary">
        <%= f.submit "Let's Go Party... Lite!"%>
      </div>
    <% end %>
    </div>
  </div>
</div>
