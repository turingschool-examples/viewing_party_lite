<h3>Create A Party</h3>
<%= form_with url: "/users/#{params[:user_id]}/movies/#{@movie.id}/viewing-party", method: :create do |f| %>
  <%= f.label "Duration:" %>
  <%= f.number_field :duration, in: @movie.runtime.to_i..10080, value: @movie.runtime %></br>
  <%= f.label "Starts At" %>
  <%= f.datetime_local_field :start_time %></br>
  <%= f.label "Invite Users" %></br>
  <div id="users_to_invite">
  <%= f.collection_check_boxes :invite_users, User.order(:name), :id, :name %></br>
  </div>
  <%= f.submit "Create Party" %>
<% end %>
