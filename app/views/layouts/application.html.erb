<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div>
        <% msg.each do |m| %>
          <p><%= m %></p>
        <% end %>
      </div>
    <% end %>
    <nav class="topnav-left">
      <%= link_to "Home", root_path %>
    </nav>
    <%= yield %>
  </body>
</html>
