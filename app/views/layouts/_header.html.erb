<style>
#top_bar {
    width:100%;
    text-align: center;
    /* height: 48px; */
    /* line-height: 48px; */
}
.inner{

      display: inline-block;
}
.btn-outline-primary{
  margin: 1px;
  background-color: rgb(188, 140, 242);

  font-size: 1.2em;
  color: black !important;
  outline: 0 none !important;
  box-shadow: none !important;
  border-color: black !important;
  font-family: 'Anek Latin';

}
.btn-outline-primary:hover {
  background-color: rgba(141, 46, 250, 0.451);
}
.btn-outline-primary:focus, .btn-outline-primary:active:focus, .btn.active-outline-primary:focus {
  outline: 0 none !important;
  box-shadow: none !important;
  border: none !important;
}
.btn-outline-danger{
  margin: 1px;
  font-family: 'Anek Latin';


  font-size: 1.2em;
  color: black !important;
  outline: 0 none !important;
  box-shadow: none !important;
  border-color: black !important;
  background-color: rgba(200, 73, 71, 0.843);
 
}
.btn-outline-danger:hover {
  background-color: rgba(200, 73, 71, 0.573);}
.a-primary {
  color: black;
}
</style>


<div id="outer">
  <div class="inner">
    <form action="/">
      <button id="dashboard_header" type="submit" class="btn btn-outline-primary">Home</button>
    </form>
  </div>
  <div class="inner">
    <form action="/discover">
      <button id="dashboard_header" type="submit" class="btn btn-outline-primary">Movies</button>
    </form>
  </div>



  <div class="inner">
    <% if current_user %>
      <form action="/dashboard">
        <button id="dashboard_header" type="submit" class="btn btn-outline-primary">Dashboard</button>
      </form>
  </div>
  <% else %>
    <div class="inner">
    <form action="/login">
    <div id="login_button">
      <button id="dashboard_header" type="submit" class="btn btn-outline-primary">Login</button>
  </div>
    </form>
  </div>
    <% end %>

  <div class="inner">
    <div class="inner_right">
      <% if current_user %>
        <div class="btn btn-outline-danger" >
          <%= link_to 'Log Out', '/logout', method: :delete, class: "a-primary" %>
      <% end %>
        </div>
  </div>
</div>
