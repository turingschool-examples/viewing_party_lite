<section class="users">
  <h3>List of Existing Users:</h3>
    <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Users</th>
      </tr>
    </thead>
    <% @users.each_with_index do |user, index|%>
    <div class="user-<%= user.id %>">
    <tbody>
    <tr>
      <th scope="row"><%= index+1 %></th>
      <td> <%= link_to user.name , user_path(user) %></td>
    </div>
    </tbody>
    <% end %>
</table>
</section>