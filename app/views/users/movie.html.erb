<%= button_to 'Discover Page', "/users/#{@user.id}/discover", method: :get %>
<% if @top_movies.present? %>
  <h3>Top Rated Movies</h3>
  <ol id="top_movies">
    <% @top_movies.each do |movie| %>
      <li><%= link_to "#{movie.title}", "/users/#{@user.id}/movies/#{movie.movie_id}" %> Vote Average: <%= movie.vote_average %></li>
    <% end %>
  </ol>
<% end %>

<% if @movies_matching_keyword.present? %>
  <h3>Movie results for: <%= params[:q] %></h3>
  <ol id="matching_movies">
    <% @movies_matching_keyword.each do |movie| %>
      <li><%= link_to "#{movie.title}", "users/#{@user.id}/movies/#{movie.movie_id}" %> Vote Average: <%= movie.vote_average %></li>
    <% end %>
  </ol>
<% end %>
