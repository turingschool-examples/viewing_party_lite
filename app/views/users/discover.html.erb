<h2> <%= @user.name %>'s Discover Page </h2>

<br>
<div align="center" id="top_rated_movies">
  <%= button_to "Discover Top Rated Movies", user_movies_path(@user.id), method: :get, local: true %>
</div>
<br>
<br>
<div align="center" class="movie_search">
  <%= form_with url: user_movies_path(@user.id), method: :get, local: true do |f| %>
    <%= f.hidden_field :query, value: "movie_search" %>
    <%= f.text_field :search, placeholder: "Search by movie title" %>
    <%= f.submit "Find Movies" %>
  <% end %>
</div>
