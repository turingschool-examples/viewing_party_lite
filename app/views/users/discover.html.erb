<%= form_with url: user_movies_path(@user), method: :get, local: true do |f| %>
  <%= f.label :movie_title %>
  <%= f.text_field :movie_title, placeholder: 'Enter a Movie Title' %>
  <%= f.submit 'Search By Movie Title' %>
<% end %>

<br>

<%= button_to "Discover Top Rated Movies", "/users/#{@user.id}/movies", method: :get %>
