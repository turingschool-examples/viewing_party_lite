<h2>Discover Movies</h2>
<%= button_to "Find Top Rated Movies", "/users/#{@user.id}/movies", params: {q: 'top rated'}, method: :get %>

<h3>OR</h3>
<br>
<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |f| %>
  <%= f.text_field :q %>
  <%= f.submit "Find Movies" %>
<% end %>