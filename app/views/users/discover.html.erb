<body>
  <div class="flex-container">
    <div class="flex-items" id="title">
      <h3>Discover Movies</h3>
    </div>

    <div class="flex-items" id='top-rated'>
      <%= button_to 'Find Top Rated Movies', user_movies_path(@user), method: :get, params: {top_rated: true}, class: 'button2' %>
    </div>

    <div class="flex-items" id='find-movie'>
      <%= form_with url: user_movies_path(@user), method: :get, local: true do |f| %>
        <%= f.text_field :search %>
        <%= f.submit 'Find Movies', class: 'button2' %>
      <% end %>
    </div>
  </div>
</body>