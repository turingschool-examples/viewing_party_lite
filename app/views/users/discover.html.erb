<p><%= button_to "Discover Top Rated Movies", "/users/#{@user.id}/movies", method: :get %></p>
<p><%= form_with url: search_path, method: :post, local: true do |form| %>
  <%= form.label :search, 'Search for Movies by their title:' %>
  <%= form.text_field :search %>
  <%= form.submit 'Search' %>
<% end %>
