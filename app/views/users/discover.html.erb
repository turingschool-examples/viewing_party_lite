<h1>Discover Movies</h1>
<h3>User: <%=@user.name %></h3>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |form| %>
  <%= form.label :movie, 'Search For Movies:' %>
  <%= form.text_field :movie %>
  <%= form.submit 'Search' %>
<% end %>
<br>
<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |form| %>
  <%= form.label :top_movies, 'Find Top Movies' %>
  <%= form.submit 'Top Movies' %>
<% end %>