<div id="discover-top-rated-movies">
  <%= button_to 'Find Top Rated Movies', "/users/#{@user.id}/movies", method: :get, params: {top_rated: 'top_rated'} %>
</div>

<div id="search-by-movie-title">
  <%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |f| %>
    <%= f.label :keyword %>
    <%= f.text_field :keyword %>
    <%= f.submit "Search by Movie Title" %>
  <% end %>
</div>
