<%= button_to 'Top Rated Movies', "/users/#{@user.id}/movies/index", method: :get, params: {top: "top_rated"} %>

<%= form_with url:  "/users/#{@user.id}/movies/index", method: :get, local: true  do |form| %>
  <%= form.label :Movie_Name %>
  <%= form.text_field :name %>

  <%= form.submit "Search for movies" %>
<% end %>
