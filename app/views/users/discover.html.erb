<%= form_with url: "/users/#{@user.id}?search=movie_title", method: :get, local: true do |f| %>
  <%= f.label :movie_title %>
  <%= f.text_field :movie_title, placeholder: 'Enter a Movie Title' %>
  <%= f.submit 'Search By Movie Title' %>
<% end %>

<br>

<%= button_to "Discover Top Rated Movies", "/users/#{@user.id}/discover", method: :get %>