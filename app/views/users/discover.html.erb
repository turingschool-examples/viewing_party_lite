<p><%= button_to "Discover Top Rated Movies", "/users/#{@user.id}/movies", method: :get %></p>
<p><%= form_with url: user_movies_path(user_id: @user.id), method: :get,local: true do |form| %>
  <%= form.label :search, 'Search for Movies by their title:' %>
  <%= form.text_field :search %>
  <%= form.hidden_field :id, value: @user.id %>
  <%= form.submit 'Search' %>
<% end %>
