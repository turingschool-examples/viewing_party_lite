<%=content_for :subtitle do%>
  Discover Movies
<%end%>

<%= button_to "Top Rated Movies", user_movies_path(@user), method: :get, params: {q: 'top rated'}  %>

<p>or</p>

<section id= "movie_search" >
<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |f| %>
  <%= f.label :q, "Movie Search" %>
  <%= f.text_field :q %>
  <%= f.submit "Search" %>
<% end %>
</section>