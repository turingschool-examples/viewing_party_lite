<h1> <%= @user.name %>'s Dashboard  </h1>

<%= form_with url: user_discoveries_path(@user.id), method: :get, local: true do |f| %>
  <%= f.submit "Discover Movies" %>
<% end %>

<section id="viewing_parties">
  <p hidden> test </p>
  <% if @user.view_parties != [] %>
    <% @movies.each do |movie| %>
      <section id="id_<%= movie.id %>">
        <p><%= movie.title %></p>
        <section id="<%= movie.id %>_party_guests">
          <p>Guests:</p>
          <ul>
            <% @party_guests.each do |guest| %>
              <li><%= guest %></li>
            <% end %>
          </ul>
        </section>
      </section>
    <% end %>
  <% end %>
</section>

