<style>
  .name {
    text-align: center;
  }
  .discover_button {
    text-align: center;
  }
  .viewing_parties {
    text-align: center;
  }

  .hr {
    border-width: 5px;
  }


</style>

<div class="name">
    <h2><%=@user.name%>'s Dashboard</h2>
</div>

<div class="discover_button">
  <%= button_to 'Discover Movies', user_discover_index_path(@user), :method => :get %>
</div>

<div class="hr">
  <hr>
</div>

<div class="viewing_parties">
  <h2>Viewing Parties</h2>
</div>

<div class="party_list">
  <% @parties.each do |party| %>
  <div class="parties-<%=party.id%>">
    <div class="party_style">
      <br>
      <a href="default.asp">
        <img src=<%= party.movie.get_poster %>><br>
      </a>
      <br>
      <h4><%= party.movie.get_info.title %></h4><br>
      <br>

      <%= party.date.strftime("%A, %B %d, %Y") %><br>
      <%= party.start.strftime("%I:%M %P") %>
      <br>
      <br>
      <% if party.find_host == @user.id %>
        <%= "Hosting" %>
      <% else %>
        <%= "Invited" %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
