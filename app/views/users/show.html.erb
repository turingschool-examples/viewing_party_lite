<h1><%= @user.name %>'s Dashboard </h1>

<h3><%= link_to "Discover Movies", "/users/#{@user.id}/discover" %></h3>


<% @user.view_parties.each do |view_party| %>
    <div id= "viewing_parties_<%=view_party.id %>">
        <%= image_tag "https://image.tmdb.org/t/p/w600_and_h900_bestv2#{view_party.poster_path}", height:500 %>         
        <p><%= view_party.movie_title %> </p>
        <p> <%=view_party.event_date.strftime("%A, %d %b %Y %l:%M %p")%> (listed times are US MST) </p>
        <% if view_party.host_id == @user.id %>
            <p> Hosting </p>
        <% else %>
            <p> Invited </p>
        <% end %>
    </div>
<% end %>
