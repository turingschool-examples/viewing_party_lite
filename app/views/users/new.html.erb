<%= render partial: './shared/header' %>

<h2>Register New User</h2>

<%= form_with model: @user, local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.submit "Register" %>
  </div>
<% end %>