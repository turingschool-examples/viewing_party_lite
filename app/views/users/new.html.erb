<div class="row">
  <div class="col d-flex justify-content-center">
    <%= form_with url: users_path, method: :post do |f| %>
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name %><br>
      <%= f.label :email, 'Email' %>
      <%= f.text_field :email %><br>
      <%= f.submit 'Register' %>
    <% end %>
  </div>
</div>
