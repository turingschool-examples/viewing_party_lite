<br>
<p>
<%= form_with model: @user, local: true do |f| %>
  <section id="form">
    <section id="error_messages">
      <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |message|%>
          <p><li><%= message %></p>
        <% end %>
      <% end %>
      <p>
      <%= f.label :name%>
      <%= f.text_field :name%>
      </p>
      <p>
      <%= f.label :email%>
      <%= f.text_field :email%>
      </p>
      <p>
      <%= f.label :password%>
      <%= f.text_field :password%>
      </p>
      <p>
      <%= f.label :password_confirmation%>
      <%= f.text_field :password_confirmation%>
      </p>

      <%= f.submit 'Register' %>
    </section>
  </section>
<% end %>
</p>