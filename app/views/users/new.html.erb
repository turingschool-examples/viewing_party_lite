<h1>Register a New User</h1>
<%= form_with url: "/users", method: :post, local: true do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %>
  <br>
  <%= f.label :email%>:
  <%= f.text_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.button 'Create New User' %>
<% end %>
