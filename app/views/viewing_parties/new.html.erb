<h1><%= @movie.title %></h1>

<%= form_with url: "/users/#{@user.id}/movies/#{@movie.id}/viewing-party", method: :post, local: true do |f| %>
  <p>
  <%= f.label :duration, "Duration (in minutes):" %>
  <%= f.text_field :duration, value: @movie.runtime %>
  </p>

  <p>
  <%= f.label :date, 'When:' %>
  <%= f.date_field :date %>
  </p>

  <p>
  <%= f.label :start_time, "Start Time:" %>
  <%= f.time_field :start_time %>
  </p>

<h3><u>Invite Users</u></h3>
  <% @users.each do |user| %>
  <div id="user-<%= user.id %>">
    <%= f.check_box(:invited_user, {:multiple => true}, user.id, nil) %>
    <%= f.label :invited_user, "#{user.name}" %>
  </div>
  <% end %>


  <p><%= f.submit 'Create Viewing Party' %></p>
<% end %>