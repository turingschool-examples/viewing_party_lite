<div class="sub-header">
  Create a Movie Party for <%= "'#{@movie.title}'" %>
</div>
<center><p><%= button_to 'Discover Page', "/users/#{@user.id}/discover", method: :get %></p></center>
<div class="party_form">
  <div id="party_form">
    <center><table>
      <%= form_with url: user_movie_viewing_parties_path(@user.id, @movie.id), method: :post, local: true do |f| %>
      <tr>
        <center><td> <%= f.label :header, "Viewing Party Details" %></td></center>
      </tr>
      <tr>
        <td> <%= f.label :movie_title, "Movie Title: #{@movie.title}" %></td>
      </tr>
      <tr>
        <td> <%= f.label :duration, "Duration of Party" %></td>
        <td> <%= f.number_field :duration, value: @movie.runtime %></td>
      </tr>
      <tr>
        <td> <%= f.label :date, "Day" %></td>
        <td> <%= f.date_field :party_date, min: Date.today %></td>
      </tr>
      <tr>
        <td> <%= f.label :time, "Start Time" %></td>
        <td> <%= f.time_field :party_time, min: Time.now.strftime("%H:%M") %></td>
      </tr>
      <tr>
      </tr>
      <tr>
      <td><%= f.label "Invite Other Users" %></td>
        <td><%= f.collection_check_boxes(:user_ids, @users, :id, :name_with_email) %></td>
      <tr>
      <%= f.hidden_field :host_id, value: @user.id %>
      <%= f.hidden_field :movie_id, value: @movie.id %>
        <td><%= f.submit "Create Party" %></td>
      <% end %>
    </table></center>
  </div>
</div>
