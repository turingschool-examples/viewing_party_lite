<h1>Viewing Party</h1>

<% if session[:user_id].nil? %>
  <%= button_to "Create a New Account", register_path, method: :get %>
  <%= button_to "Log In", login_path, method: :get %>
<% else %>
  <%= button_to "Log Out", logout_path, method: :delete %>

  <div id="current-users">
    <h2>Current Users</h2>
    <ul>
      <% @users.each do |user| %>
        <li id="user-<%= user.id %>">
          <ul>
            <li><%= "Name: #{user.name}" %></li>
            <li><%= "Email: #{user.email}" %></li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>