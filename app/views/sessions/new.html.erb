<h1>Log In</h1>

<% flash.each do |type, msg| %>
  <div class='flash_red'>
    <%= msg %>
  </div>
  <br>
<% end %>

<div id='login-form'>
  <%= form_with url: login_path, method: :post, local: true do |form| %>
    <%= form.label :email, "Email:" %>
    <%= form.text_field :email %>
    <br>
    <br>
    <%= form.label :password, "Password:" %>
    <%= form.password_field :password %>
    <br>
    <br>
    <%= form.submit "Log In" %>
  <% end %>
</div>